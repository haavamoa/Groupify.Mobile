<?xml version="1.0" encoding="UTF-8" ?>
<Views:BackdropMainView x:Class="Groupify.Mobile.Views.IndividualSelectorView"
                        xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:Views="clr-namespace:Groupify.Mobile.Views;assembly=Groupify.Mobile"
                        xmlns:ViewModels="clr-namespace:Groupify.Mobile.ViewModels;assembly=Groupify.Mobile"
                        xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        x:DataType="{x:Type ViewModels:IndividualSelectorViewModel}"
                        xmlns:dblend="http://schemas.microsoft.com/expression/blend/2008"
                        mc:Ignorable="d dblend"
                        dblend:DataContext="{dblend:DesignInstance ViewModels:IndividualSelectorViewModel}"
                        Title="{Binding Group.Name}">
    <Button Padding="50"
            Command="{Binding DeleteGroupCommand}"
            HorizontalOptions="Center"
            Text="Delete Group"
            VerticalOptions="Center" />
</Views:BackdropMainView>